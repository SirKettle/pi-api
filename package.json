{
  "name": "pi-api",
  "version": "1.0.0",
  "description": "node server running on a raspberry PI 4",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rm -rf ./node_modules & rm -rf ./dist",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.0.0",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "public-ip": "4.0.3",
    "ramda": "^0.27.1",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/ramda": "^0.27.38",
    "@types/twitter": "^1.7.0",
    "prettier": "^2.2.1"
  }
}
